@model VIVs.Models.Vivsuser

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Login-Register_Layout.cshtml";
}
<style>
    .hidden {
        display: none;
    }</style>

<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg'); background-position: top;">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Welcome!</h1>

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
            <div class="col-xl-9 col-lg-5 col-md-9 mx-auto" style="    margin-top: -60px;">
                <div class="card z-index-0">
                    <div class="card-header text-center pt-4">
                        <h5>Select Your Account Type</h5>
                    </div>


                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <input type="radio" class="btn-check" onclick="dotoggle()" name="btnradio" id="btnradio1" autocomplete="on" checked>
                        <label class="btn btn-outline-primary" for="btnradio1">Provider</label>



                        <input type="radio" class="btn-check" name="btnradio" onclick="dotoggle()" id="btnradio3" autocomplete="on">
                        <label class="btn btn-outline-primary" for="btnradio3">Receiver</label>
                    </div>

                    <div class="card-body">
                        <form role="form" asp-action="Register" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="FirstName" for="example-text-input" class="form-control-label">First Name</label>
                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" aria-label="FirstName" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="MiddleName" for="example-text-input" class="form-control-label"> Middle Name</label>
                                        <input asp-for="MiddleName" type="text" class="form-control" placeholder="MiddleName " aria-label="MiddleName" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="Surname" for="example-text-input" class="form-control-label">Surname</label>
                                        <input asp-for="Surname" type="text" class="form-control" placeholder="Surname " aria-label="Surname" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="LastName" for="example-text-input" class="form-control-label">Last Name</label>
                                        <input asp-for="LastName" type="text" class="form-control" placeholder="LastName " aria-label="LastName" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" for="example-text-input" class="form-control-label">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Username" for="example-text-input" class="form-control-label">Username</label>
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Username" aria-label="Username" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password" for="example-text-input" class="form-control-label">Password</label>
                                        <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Password" aria-label="Password" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Confirmpassword" for="example-text-input" class="form-control-label">Confirm Password</label>
                                        <input asp-for="Confirmpassword" id="confirm" onChange="ppd();" type="password" class="form-control ErorrPass " placeholder="Confirm Password" aria-label="Confirmpassword" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phonenumber" for="example-text-input" class="form-control-label">Phone Number</label>
                                        <input asp-for="Phonenumber" type="tel" class="form-control" value="07" placeholder="Phonenumber" aria-label="Phonenumber" oninput="validatePhoneNumber(this)" required>
                                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                        <span  id="phone-error" class="text-danger" style="display: none; font-size:small ">Please enter a valid phone number starting with "07"</span>
                                    </div>
                                </div>


                                @* <div class="col-md-6">
                                <div class="form-group">
                                <label asp-for="Gender" for="example-text-input" class="form-control-label">Gender</label>
                                <input asp-for="Gender" type="text" class="form-control" placeholder="Gender" aria-label="Gender" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                                </div>*@
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Gender" class="form-control-label">Gender</label>
                                        <select asp-for="Gender" class="form-control" required>
                                            <option value="">Select a gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>

                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Cityid" for="example-text-input" class="form-control-label">City</label>
                                        <select asp-for="Cityid" class="form-control" asp-items="ViewBag.Cityid" onfocus="focused(this)" onfocusout="defocused(this)"></select>
                                        @* <input  onfocus="focused(this)" onfocusout="defocused(this)">*@
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Address" for="example-text-input" class="form-control-label">Info Address</label>
                                        <input asp-for="Address" type="text" class="form-control" placeholder="Info Address" aria-label="Address" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6" id="hideme">
                                    <div class="form-group">
                                        <label asp-for="Estabname" for="example-text-input" class="form-control-label">Establishment Name</label>
                                        <input asp-for="Estabname" type="text" class="form-control" placeholder="Establishment Name" aria-label="Estabname" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Estabname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6" id="hideme1">
                                    <div class="form-group">
                                        <label asp-for="Establishmentnationalnumber" for="example-text-input" class="form-control-label">Establishment National Number</label>
                                        <input asp-for="Establishmentnationalnumber" type="number" class="form-control" placeholder="Establishment National Number" aria-label="Establishmentnationalnumber" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Establishmentnationalnumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6" id="hideme3">
                                    <div class="form-group">
                                        <label asp-for="ImageFile" for="example-text-input" class="form-control-label">Establishment Image</label>
                                        <input asp-for="ImageFile" type="file" class="form-control" placeholder="ImageFile" aria-label="ImageFile" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-6" id="hideme2">
                                    <div class="form-group">
                                        <label asp-for="Categorytypeid" class="form-control-label">Category</label>
                                        <select asp-for="Categorytypeid" class="form-control" required onchange="onCategoryTypeChange()">
                                            <option value="0" selected>Select a Category</option>
                                            <option value="1">Medical Clinics</option>
                                            <option value="2">Restaurants</option>
                                            <option value="3">Pharmacies</option>
                                            <option value="4">Others</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6" id="OtherCat" style="display:none;">
                                    <div class="form-group">
                                        <label asp-for="Otherscategory" for="example-text-input" class="form-control-label">Others category</label>
                                        <input asp-for="Otherscategory" type="text" class="form-control" placeholder="Otherscategory" aria-label="Otherscategory" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Otherscategory" class="text-danger"></span>
                                    </div>
                                </div>

                                <script>
                                    function onCategoryTypeChange() {
                                        var categoryType = document.getElementById("Categorytypeid").value;

                                        if (categoryType == "4") {
                                            document.getElementById("OtherCat").style.display = "block";
                                        } else {
                                            document.getElementById("OtherCat").style.display = "none";
                                        }
                                    }
                                </script>


                                <script>
                                    function validatePhoneNumber(element) {
                                        var phoneNumber = element.value;
                                        var regex = /^07\d{8}$/; // Regex pattern to match "07" followed by 8 digits

                                        if (!regex.test(phoneNumber)) {
                                            element.setCustomValidity("Invalid phone number");
                                            document.getElementById('phone-error').style.display = 'block';
                                        } else {
                                            element.setCustomValidity("");
                                            document.getElementById('phone-error').style.display = 'none';
                                        }
                                    }

                                </script>
                            </div>
                            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                            <script>
                                function ppd() {
                                    var password = $("#password").val();
                                    var confirm_password = $("#confirm").val();

                                    if (password != confirm_password) {
                                        $("#confirm").css('border-color', "#c80000");
                                        $("#textboxid").css({
                                            "background-color": "#fee2e2"
                                        });
                                        alert('password not match');
                                    }
                                    else
                                        $("#confirm").css('border-color', "#d2d6da");
                                    $("#textboxid").css({
                                        "background-color": "#fee2e2"
                                    });
                                }

                                $(document).ready(function() {
                                    $('form').submit(function(event) {
                                        var password = $("#password").val();
                                        var confirm_password = $("#confirm").val();

                                        if (password != confirm_password) {
                                            $("#confirm").css('border-color', "#c80000");
                                            $("#textboxid").css({
                                                "background-color": "#fee2e2"
                                            });
                                            alert('password not match');
                                            event.preventDefault(); // Prevent form submission
                                        }
                                    });
                                });
                            </script>

                            @if (ViewBag.error != null)
                            {
                                <p style="color:red">@ViewBag.error</p>
                            }
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign up</button>
                            </div>
                            <p class="text-sm mt-3 mb-0">Already have an account? <a href="~/Auth/Login" class="text-dark font-weight-bolder">Sign in</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


