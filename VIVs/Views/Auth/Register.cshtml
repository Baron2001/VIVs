                    <div class="card-body">
                        <form role="form" asp-action="Register" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="Fullname" for="example-text-input" class="form-control-label">Fullname</label>
                                <input asp-for="Fullname"  id="name" name="name"   pattern="^([^ ]+ ){3,}[^ ]+$" title="Please enter your name in the format: First Last Surname Last" type="text" class="form-control" placeholder="Fullname" aria-label="Fullname" required>
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                                <div id="error-message" style="  color: red;
                                    font-size: 12px;
                                    margin-top: 5px;" class="hidden">Please enter your name in the correct format: First Last Surname Last
                                </div>
                            </div>
                            
                            <script>
                                const nameInput = document.getElementById("name");
                                const errorMessage = document.getElementById("error-message");
                                
                                nameInput.addEventListener("input", () => {
                                  if (nameInput.validity.patternMismatch) {
                                    errorMessage.classList.remove("hidden");
                                  } else {
                                    errorMessage.classList.add("hidden");
                                  }
                                });
                            </script>
                            <style>
                                .hidden {
                                  display: none;
                                  
                                }
                                .error-message {
                                  color: red;
                                  font-size: 12px;
                                  margin-top: 5px;
                                }
                            </style>
                            
                            <div class="row" >
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" for="example-text-input" class="form-control-label">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Username" for="example-text-input" class="form-control-label">Username</label>
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Username" aria-label="Username" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password" for="example-text-input" class="form-control-label">Password</label>
                                        <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Password" aria-label="Password" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Confirmpassword" for="example-text-input" class="form-control-label">Confirm Password</label>
                                        <input asp-for="Confirmpassword" id="confirm" onChange="ppd();" type="password" class="form-control ErorrPass " placeholder="Confirm Password" aria-label="Confirmpassword" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Confirmpassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phonenumber" for="example-text-input" class="form-control-label">Phonenumber</label>
                                        <input asp-for="Phonenumber" type="tel" class="form-control" placeholder="Phonenumber" aria-label="Phonenumber" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ImageFile" for="example-text-input" class="form-control-label">ImageFile</label>
                                        <input asp-for="ImageFile" type="file" class="form-control" placeholder="ImageFile" aria-label="ImageFile" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Gender" for="example-text-input" class="form-control-label">Gender</label>
                                        <input asp-for="Gender" type="text" class="form-control" placeholder="Gender" aria-label="Gender" onfocus="focused(this)" onfocusout="defocused(this)" required>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                              
                             
                                <div class="col-md-6" id="hideme">
                                    <div class="form-group">
                                        <label asp-for="Estabname" for="example-text-input" class="form-control-label">Estabname</label>
                                        <input asp-for="Estabname" type="text" class="form-control" placeholder="Estabname" aria-label="Estabname" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Estabname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6" id="hideme1" >
                                    <div class="form-group">
                                        <label asp-for="Establishmentnationalnumber" for="example-text-input" class="form-control-label">Establishmentnationalnumber</label>
                                        <input asp-for="Establishmentnationalnumber" type="number" class="form-control" placeholder="Establishmentnationalnumber" aria-label="Establishmentnationalnumber" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Establishmentnationalnumber" class="text-danger"></span>
                                    </div>
                                </div>
                                
                               
                                <div class="col-md-6" id="hideme2">
                                    <div class="form-group">
                                        <label asp-for="Categorytypeid" for="example-text-input" class="form-control-label">Categorytype</label>
                                        <select asp-for="Categorytypeid" class="form-control" asp-items="ViewBag.Categorytypeid" onfocus="focused(this)" onfocusout="defocused(this)"></select>
                                        @*<input  onfocus="focused(this)" onfocusout="defocused(this)">*@
                                    </div>
                                </div>
                                <div class="col-md-6" id="hideme3">
                                    <div class="form-group">
                                        <label asp-for="Otherscategory" for="example-text-input" class="form-control-label">Others category</label>
                                        <input asp-for="Otherscategory" type="text" class="form-control" placeholder="Otherscategory" aria-label="Otherscategory" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Otherscategory" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group" id="hideme4">
                                        <label asp-for="Cityid" for="example-text-input" class="form-control-label"></label>
                                        <select asp-for="Cityid" class="form-control" asp-items="ViewBag.Cityid" onfocus="focused(this)" onfocusout="defocused(this)"></select>
                                        @* <input  onfocus="focused(this)" onfocusout="defocused(this)">*@
                                    </div>
                                </div>
                                <div class="col-md-6" id="hideme5">
                                    <div class="form-group">
                                        <label asp-for="Address" for="example-text-input" class="form-control-label">Info Address</label>
                                        <input asp-for="Address" type="text" class="form-control" placeholder="Info Address" aria-label="Address" onfocus="focused(this)" onfocusout="defocused(this)">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>


                            </div>
                            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                            <script>
                                function ppd() {
                                    var password = $("#password").val();
                                    var confirm_password = $("#confirm").val();

                                    if (password != confirm_password) {
                                        $("#confirm").css('border-color', "#c80000");
                                        $("#textboxid").css({
                                            "background-color": "#fee2e2"
                                        });
                                        alert('password not match');
                                    }
                                    else
                                        $("#confirm").css('border-color', "#d2d6da");
                                        $("#textboxid").css({
                                            "background-color": "#fee2e2"
                                        });
                                }
                            </script>
                                                  
                            @if (ViewBag.error != null)
                            {
                                <p style="color:red">@ViewBag.error</p>
                            }
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Sign up</button>
                            </div>
                            <p class="text-sm mt-3 mb-0">Already have an account? <a href="~/Auth/Login" class="text-dark font-weight-bolder">Sign in</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


