@model VIVs.Models.Vivshome
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";

}
<div class="row">
    <div class="col-md-12 mt-4">
      <div class="card">
        <div class="card-header pb-0 px-3">
            <div class="row" style="padding:20px;">
               <div class="col-6 d-flex align-items-center">
                 <h6 class="mb-0">Home Page Information</h6>
               </div>
               <div class="col-6 text-end">
                 <a asp-action="EditeHome" asp-controller="Dashboard" asp-route-id="@Model.Id" class="btn bg-gradient-dark mb-0" ><i class="fas fa-pencil-alt" aria-hidden="true"></i>&nbsp;&nbsp;Edit</a>
               </div>
            </div>
        </div>
        <div class="card-body pt-4 p-3">
          <ul class="list-group">
            <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
              <div class="d-flex flex-column">
@*                <h6 class="mb-3 text-sm">Oliver Liam</h6>*@
                <span class="mb-2 text-xs">Image 1:<img src=@Url.Content("~/Images/"+@Model.Image1) class="avatar avatar-sm mb-3 text-sm" alt="user1" style="width:700px;height:300px;" /></span>
                <span class="mb-2 text-xs">Title 1: <span class="text-dark font-weight-bold ms-sm-2">@Model.Title1</span></span>
                <hr class="horizontal dark">
                <hr class="horizontal dark">
                <span class="mb-2 text-xs">Image 2:<img src=@Url.Content("~/Images/"+@Model.Image2) class="avatar avatar-sm mb-3 text-sm" alt="user1" style="width:700px;height:300px;" /></span>
                <span class="mb-2 text-xs">Title 2: <span class="text-dark font-weight-bold ms-sm-2">@Model.Title2</span></span>
                <hr class="horizontal dark">
                <hr class="horizontal dark">
                <span class="mb-2 text-xs">Image 3:<img src=@Url.Content("~/Images/"+@Model.Image3) class="avatar avatar-sm mb-3 text-sm" alt="user1" style="width:700px;height:300px;" /></span>
                <span class="mb-2 text-xs">Title 3: <span class="text-dark font-weight-bold ms-sm-2">@Model.Title3</span></span>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
</div>

<br />