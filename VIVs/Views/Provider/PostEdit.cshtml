@model VIVs.Models.Vivspost

@{
    ViewData["Title"] = "PostEdit";
    Layout = "~/Views/Shared/Provider_Layout.cshtml";
}
<div class="main-content position-relative max-height-vh-100 h-100">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header pb-0">
              <div class="d-flex align-items-center">
                
              </div>
            </div>
            <div class="card-body">
            <form asp-action="PostEdit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Postid" />
                <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label asp-for="Numberofitem" for="example-text-input" class="form-control-label">Number Of Item</label>
                        <input asp-for="Numberofitem" class="form-control" type="number" required>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label asp-for="Deadline" for="example-text-input" class="form-control-label">Deadline</label>
                        <input asp-for="Deadline" class="form-control" type="date" required>
                      </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label asp-for="Description" for="example-text-input" class="form-control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" type="text" rows="2" required> </textarea>
                      </div>
                    </div>
                </div>
                <hr class="horizontal dark">
                <div class="form-group" style="display:flex;justify-content: center;">
                    <input type="submit" value="Save" class="btn btn-primary col-md-3 submit" />
                </div>
              </form>
                <div>
                    <a asp-action="Index"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back to List</a>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
